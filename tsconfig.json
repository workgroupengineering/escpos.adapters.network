{
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ],
  "compilerOptions": {
      "outDir": "lib",
      "declaration": true,
      "target": "es2018",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "removeComments": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "noLib": false,
      "preserveConstEnums": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "types": ["node","escpos"],
      "lib": ["es2020", "esnext.array"]
  }
}